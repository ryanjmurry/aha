@{
  Layout = "_Layout";
}

<div class="container">
    <h1 class="centered">@Model.CurrentSpecialty.Subject</h1>
    <br>
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col">
            <h4>Tutors</h4>
            <ul class="list-group list-group-flush">
                @foreach (var tutor in Model.CurrentSpecialty.GetTutors())
                {
               
                    <li class="list-group-item">
                        <a href="/tutors/@tutor.Id">@tutor.LastName, @tutor.FirstName</a>
                    </li>
                }     
            </ul>
        </div>
        <div class="col">
            <h4>Clients</h4>
            <ul class="list-group list-group-flush">
                @foreach (var client in Model.CurrentSpecialty.GetClients())
                {
                    <li class="list-group-item">
                        <a href="/clients/@client.Id">@client.LastName, @client.FirstName</a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-3">

        </div>
    </div>
</div>