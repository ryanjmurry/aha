@{
  Layout = "_Layout";
  ViewData["Title"] = "@Model.CurrentTutor.Name";
  
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <span class="card-title detail-header">@Model.CurrentTutor.FirstName @Model.CurrentTutor.LastName</span>&nbsp;&nbsp;
                    @if (Model.CurrentTutor.Credential)
                    {
                        <i data-toggle="tooltip" data-placement="right" title="Licensed Teacher" class="fas fa-id-card-alt detail-icon"></i>
                    }
                    <br>
                </div>
                <div class="col-3">
                        <a href="/tutors/@Model.CurrentTutor.Id/update" class="btn btn-sm btn-outline-info">Update Info</a>
                        <a href="/tutors/@Model.CurrentTutor.Id/delete" class="btn btn-sm btn-outline-danger">Delete Tutor</a>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <h5 class="detail-subheader">Email</h5>
                    <a href="mailto:@Model.CurrentTutor.Email" class="detail-info">@Model.CurrentTutor.Email</a>
                </div>
                <div class="col">
                    <h5 class="detail-subheader">Phone</h5>
                    <a href="tel:@Model.CurrentTutor.PhoneNumber" class="detail-info">@Model.CurrentTutor.PhoneNumber</a>
                </div>
                <div class="col">
                    <h5 class="detail-subheader">Rate</h5>
                    <span class="detail-info">$@Model.CurrentTutor.Rate.ToString("0.00") / hour</span>
                </div>
                <div class="col">
                    <h5 class="detail-subheader inline">Availability</h5><br>
                    <span class="detail-info">@Model.CurrentTutor.Availability</span>
                </div>
            </div> 
            <br>
            <br>
            <div class="row">
                <div class="col-4">
                    <h5 class="detail-subheader inline">Specialties</h5><a href="/tutors/@Model.CurrentTutor.Id/specialties" class="btn btn-sm btn-outline-primary float-right inline">Manage Specialties</a>
                    <ul class="list-group list-group-flush">
                    @if (Model.CurrentTutor.GetSpecialties().Count == 0)
                    {
                        <li class="list-group-item"></li>
                    }
                    else
                    {
                        @foreach (var specialty in Model.CurrentTutor.GetSpecialties())
                        {
                        <li class="list-group-item">@specialty.Subject</li>
                          
                        }  
                    }    
                    </ul>
                </div>
                <div class="col-4">
                    <h5 class="detail-subheader inline">Clients</h5><a href="/tutors/@Model.CurrentTutor.Id/clients" class="btn btn-sm btn-outline-warning float-right inline">Manage Clients</a>
                    <ul class="list-group list-group-flush">
                    @if (Model.CurrentTutor.GetClients().Count == 0)
                    {
                        <li class="list-group-item"></li>
                    }
                    else
                    {
                        @foreach (var client in Model.CurrentTutor.GetClients())
                        {
                            <li class="list-group-item"><a href="/clients/@client.Id">@client.LastName, @client.FirstName</a></li>
                        }
                    }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
